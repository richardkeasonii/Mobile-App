<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CourseDetails">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Name: " />

                <EditText
                    android:id="@+id/assessmentname"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:hint="Assessment Name Here" />

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->

<!--                <TextView-->
<!--                    android:layout_width="312dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:padding="10dp"-->
<!--                    android:text="Note: " />-->

<!--                <EditText-->
<!--                    android:id="@+id/note"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:hint="Note here" />-->

<!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="312dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Start Date: " />

                <TextView
                    android:id="@+id/assessmentstart"
                    android:layout_width="92dp"
                    android:layout_height="50dp"
                    android:text="Tap Here to Select Date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="312dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="End Date: " />

                <TextView
                    android:id="@+id/assessmentend"
                    android:layout_width="92dp"
                    android:layout_height="50dp"
                    android:text="Tap Here to Select Date" />

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/assessmentradio"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/objective"
                    android:text="Objective Assessment"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/performance"
                    android:text="Performance Assessment"/>


            </RadioGroup>



        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>